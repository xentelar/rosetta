{erl_opts, [
  warn_unused_vars,
  ewarn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_missing_spec,
  warn_untyped_record,
  debug_info
]}.

{deps, []}.

{relx, [
  {release, {rosetta, "0.1.0"}, [
      %% Erlang
      sasl,
      crypto,
      inets,
      tools,
      runtime_tools,
      os_mon,
      %% Third-parties
      observer_cli,
      hash,
      debugger
  ]},
  {dev_mode, false},
  {include_src, false},
  {include_erts, true},
  {extended_start_script, true}
]}.

{shell, [
  {config, "config/dev/sys.config"},
  {apps, [rosetta]}
]}.

{plugins, [rebar3_proper, rebar3_auto, rebar3_run]}.